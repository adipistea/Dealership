        <ComboBox HorizontalAlignment="Left" Margin="533,64,0,0" VerticalAlignment="Top" Width="120" FontSize="18" x:Name="CarType"/>
        <ComboBox HorizontalAlignment="Left" Margin="121,113,0,0" VerticalAlignment="Top" Width="120" FontSize="18" x:Name="CarEngine"/>
        <ComboBox HorizontalAlignment="Left" Margin="533,117,0,0" VerticalAlignment="Top" Width="120" FontSize="18" x:Name="CarColor"/>
